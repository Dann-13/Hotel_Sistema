<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="shortcut icon" href="resources/img/Tumaco/logo1-removebg-preview.png" type="image/x-icon">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="resources/css/reset.css">
    <link rel="stylesheet" href="resources/css/admin/usuarios/usuarios.css">
    <link rel="stylesheet" href="resources/css/admin/admin.css">
    <script src="https://kit.fontawesome.com/b049437614.js" crossorigin="anonymous"></script>

    <title>Administrador</title>

</head>

<body>
    <header>
        <div class="encabezado">
            <div class="imgClass">
                <img src="resources/img/Tumaco/logo.png" alt="">
            </div>
            <a href="admin" class="btn__User">Dashboard</a>
            <a href="admin_reservas" class="btn__reserva">Reservas</a>
            <a href="logout" class="btn__reserva">Salir</a>
        </div>
    </header>
    <div class="contenedor">
        <% if (login) {%>
            <main>
                <h2 class="name">Bienvenido! <%= nombre %>
                </h2>
                <div class="contenido">
                    <div class="imgClass">
                        <img src="resources/img/admin.svg" alt="" srcset="">
                    </div>
                    <div class="tabla">
                        <table>
                            <thead>
                                <form action="" class="buscador" id="form" style="padding: 15px;">
                                    <div class="search-container">
                                        <input type="text" placeholder="¿Que desea buscar?" class="search-input">
                                        <button class="search-button"><i class="fa fa-search"></i></button>
                                    </div>

                                </form>
                                <caption style="padding: 30px 0">Lista de Usuarios Registrados</caption>
                                <tr>
                                    <th>Nombre</th>
                                    <th>Correo electrónico</th>
                                    <th>Contraseña</th>
                                    <th colspan="2">Opciones</th> <!-- Columna unida que contiene dos columnas más -->
                                </tr>
                            </thead>
                            <tbody>
                                <% usuarios.forEach(usuario=> { %>
                                    <tr>
                                        <td>
                                            <%= usuario.nombre %>
                                        </td>
                                        <td>
                                            <%=usuario.correo%>
                                        </td>
                                        <td>
                                            <%=usuario.contrasena%>
                                        </td>
                                        <td><a href="/admin_edicion/<%= usuario.id_usuario %>"
                                                class="btn__edit">Editar</a></td>
                                        <td><a href="/eliminar_usuario/<%= usuario.id_usuario %>"
                                                class="btn__delete">Eliminar</a></td>
                                    </tr>
                                    <% }); %>
                                        <!-- Más filas de datos -->
                            </tbody>
                        </table>

                    </div>
                    <div class="table">
                        <div class="search-container">
                            <input type="text" placeholder="¿Que desea buscar?" class="search-input">
                            <button class="search-button"><i class="fa fa-search" aria-hidden="true"></i></button>
                        </div>
                        <% usuarios.forEach(usuario=> { %>
                            <div class="item">
                                <div class="row">
                                    <div class="thead">Nombre</div>
                                    <div class="tbody">
                                        <%= usuario.nombre %>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="thead">Correo</div>
                                    <div class="tbody">
                                        <%= usuario.correo %>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="thead">Contraseña</div>
                                    <div class="tbody">
                                        <%= usuario.contrasena %>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="tbody"><a href="/admin_edicion/<%= usuario.id_usuario %>"
                                            class="btn__edit">Editar</a></div>
                                    <div class="tbody"><a href="/eliminar_usuario/<%= usuario.id_usuario %>"
                                        class="btn__delete">Eliminar</a></div>
                                </div>
                            </div>
                            <% }); %>
                    </div>
                </div>
            </main>


            <!--Mensaje de Regstro extoso-->
            <% } else {%>
                <h1>Inicie sesion</h1>
                <h1><strong>
                        <%= name %>
                    </strong></h1>
                <a href="login" class="a-login">Ir a Login</a>
                <% } %>
    </div>
    <footer>
        <div class="contenido__footer">
            <p>Desarrollado por: equipo 1 Aunar xd</p>
            <div class="redes">
                <a href="https://github.com/Dann-13/Hotel_Sistema_php"><i class="fa-brands fa-github"></i></a>
                <a href=""><i class="fa-brands fa-facebook"></i></a>
            </div>
        </div>
    </footer>
</body>

</html>