<html lang="en">

<head>
  <meta charset="utf-8">
  <title>Mis reservas</title>
  <link rel="stylesheet" href="resources/css/admin/admin.css">
  <link rel="stylesheet" href="resources/css/estilos_usuarios.css">
  <script src="https://kit.fontawesome.com/b049437614.js" crossorigin="anonymous"></script>
  <link rel="shortcut icon" href="resources/img/Tumaco/logo1-removebg-preview.png" type="image/x-icon">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2"
    crossorigin="anonymous"></script>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">

</head>

<body>

  <header>
    <div class="encabezado">
      <div class="imgClass">
        <img src="resources/img/Tumaco/logo.png" alt="">
      </div>
      <a href="reserva" class="btn__User">Reservar</a>
      <a href="listado_reserva" class="btn__reserva">Mirar mis reservas</a>
      <a href="/" class="btn__reserva">Salir</a>
    </div>
  </header>

  <div class="container text-center">
    <div class="row align-items-start">
      <div class="container text-center">
        <img style="margin-top: 20px;"
          src="https://images.unsplash.com/flagged/photo-1570612861542-284f4c12e75f?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxzZWFyY2h8M3x8cGVyc29uYXxlbnwwfHwwfHw%3D&w=1000&q=80"
          width="120" height="120">
      </div>
    </div>
    
    <div class="contenedor">
      <% if (login) {%>
        <main>
          <h2 class="name">Bienvenido! <%= nombre %>
          </h2>
          <div class="contenido">
            <div class="tabla">
              <table>
                <thead>
                  <form action="" class="buscador" id="form" style="padding: 15px;">
                    <div class="search-container">
                      <input type="text" placeholder="¿Que desea buscar?" class="search-input">
                      <button class="search-button"><i class="fa fa-search"></i></button>
                    </div>
                  </form>
                  <caption style="padding: 30px 0">Lista de Usuarios Registrados</caption>
                  <tr>
                    <th>ID</th>
                    <th>id_reserva </th>
                    <th>id_usuario</th>
                    <th>id_habitacion</th>
                    <th>Fecha entrada</th>
                    <th>Fecha salida</th>
                    <th>Precio</th>
                    <th colspan="2">Opciones</th> <!-- Columna unida que contiene dos columnas más -->
                  </tr>
                </thead>
                <tbody>
                  <% listado_reserva.forEach(listado_reserva=> { %>
                    <tr>
                      <td>
                        <%= listado_reserva.id_reserva %>
                      </td>
                      <td>
                        <%=listado_reserva.id_usuario%>
                      </td>
                      <td>
                        <%=listado_reserva.id_habitacion%>
                      </td>
                      <td>
                        <%=listado_reserva.fecha_llegada%>
                      </td>
                      <td>
                        <%=listado_reserva.fecha_salida%>
                      </td>
                      <td>
                        <%=listado_reserva.precio_total%>
                      </td>
                      <td><a href="/admin_edicion/<%= usuario.id_usuario %>" class="btn__edit">Editar</a></td>
                      <td><a href="/eliminar_usuario/<%= usuario.id_usuario %>" class="btn__delete">Eliminar</a></td>
                    </tr>
                    <% }); %>
                      <!-- Más filas de datos -->
                </tbody>
              </table>
    
            </div>
            <div class="table">
              <div class="search-container">
                <input type="text" placeholder="¿Que desea buscar?" class="search-input">
                <button class="search-button"><i class="fa fa-search" aria-hidden="true"></i></button>
              </div>
              <% listado_reserva.forEach(listado_reserva=> { %>
                <div class="item">
                  <div class="row">
                    <div class="thead">Nombre</div>
                    <div class="tbody">
                      <%= usuarios.nombre %>
                    </div>
                  </div>
                  <div class="row">
                    <div class="thead">Tipo</div>
                    <div class="tbody">
                      <%= listado_reserva.tipo %>
                    </div>
                  </div>
                  <div class="row">
                    <div class="thead">Fecha entrada</div>
                    <div class="tbody">
                      <%= listado_reserva.fecha_ent%>
                    </div>
                  </div>
                  <div class="row">
                    <div class="thead">Fecha salida</div>
                    <div class="tbody">
                      <%= listado_reserva.fecha_sal%>
                    </div>
                  </div>
                  <div class="row">
                    <div class="thead">Precio</div>
                    <div class="tbody">
                      <%= listado_reserva.precio%>
                    </div>
                  </div>
                  <div class="row">
                    <div class="tbody"><a href="/admin_edicion/<%= usuario.id_usuario %>" class="btn__edit">Editar</a>
                    </div>
                    <div class="tbody"><a href="/eliminar_usuario/<%= usuario.id_usuario %>"
                        class="btn__delete">Eliminar</a></div>
                  </div>
                </div>
                <% }); %>
            </div>
          </div>
        </main>
    
    
        <!--Mensaje de Regstro extoso-->
        <% } else {%>
          <h1>Inicie sesion</h1>
          <h1><strong>
              <%= name %>
            </strong></h1>
          <a href="login_register" class="a-login">Ir a Login</a>
          <% } %>
    </div>


    <div class="col">
      <table class="table">
        <table>
          <caption>Reservas</caption>
          <thead>
            <tr>
              <th scope="col">ID</th>
              <th scope="col">Nombre </th>
              <th scope="col">Tipo</th>
              <th scope="col">Fecha entrada</th>
              <th scope="col">Fecha salida</th>
              <th scope="col">Precio</th>
              <th scope="col">Editar</th>
              <th scope="col">Borrar</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <th scope="row">1</th>
              <td>Mark</td>
              <td>Estandar</td>
              <td>05/10/2023</td>
              <td>08/10/2023</td>
              <td>280.000</td>
              <td><button class="btn__edit">Editar</button></td>
              <td><button class="btn__delete">Borrar</button></td>
            </tr>
            <tr>
              <th scope="row">2</th>
              <td>Jacob</td>
              <td>Suite</td>
              <td>18/01/2023</td>
              <td>25/01/2023</td>
              <td>670.000</td>
              <td><button class="btn__edit">Editar</button></td>
              <td><button class="btn__delete">borrar</button></td>
            </tr>
            <tr>
              <th scope="row">3</th>
              <td>Larry the Bird</td>
              <td>Estandar plus</td>
              <td>15/12/2023</td>
              <td>20/12/2023</td>
              <td>400.000</td>
              <td><button class="btn__edit">Editar</button></td>
              <td><button class="btn__delete">borrar</button></td>
            </tr>
          </tbody>
        </table>
    </div>
  </div>
  </div>

  <footer>
    <div class="contenido__footer">
      <p>Desarrollado por: equipo 1 Aunar xd</p>
      <div class="redes">
        <a href="https://github.com/Dann-13/Hotel_Sistema_php"><i class="fa-brands fa-github"></i></a>
        <a href=""><i class="fa-brands fa-facebook"></i></a>
      </div>
    </div>
  </footer>


</html>